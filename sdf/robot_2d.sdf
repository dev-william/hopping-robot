<?xml version="1.0"?>
<sdf version="1.7">
	<model name="HoppingRobot2d">
		<link name="base_link">
			<collision name="base_link_collision">
				<geometry>
					<box>
						<size>0.1 0.1 0.1</size>
					</box>
				</geometry>
			</collision>
			<visual name="base_link_visual">
				<geometry>
					<box>
						<size>0.1 0.1 0.1</size>
					</box>
				</geometry>
			</visual>
		</link>

		<link name="upper_link">
			<pose>0 0 0 0 0 0</pose>
			<inertial>
				<pose>0 0 -0.1 0 0 0</pose>
				<mass>1</mass>
				<inertia>
					<ixx>1</ixx>
					<ixy>0</ixy>
					<ixz>0</ixz>
					<iyy>0.083</iyy>
					<iyz>0</iyz>
					<izz>1</izz>
				</inertia>
			</inertial>
			<collision name="upper_link_collision">
				<pose>0 0 -0.1 0 0 0</pose>
				<geometry>
					<cylinder>
						<length>0.2</length>
						<radius>0.015</radius>
					</cylinder>
				</geometry>
			</collision>
			<visual name="upper_link_visual">
				<pose>0 0 -0.1 0 0 0</pose>
				<geometry>
					<cylinder>
						<length>0.2</length>
						<radius>0.015</radius>
					</cylinder>
				</geometry>
			</visual>
		</link>
		<joint name="shoulder" type="revolute">
			<child>upper_link</child>
			<parent>base_link</parent>
			<axis>
				<xyz expressed_in="__model__">0 1 0</xyz>
				<limit>
				</limit>
				<dynamics>
					<damping>0.1</damping>
					<friction>0</friction>
					<spring_reference>0</spring_reference>
					<spring_stiffness>0</spring_stiffness>
				</dynamics>
			</axis>
		</joint>

		<link name="lower_link">
			<pose relative_to="upper_link">0 0 -0.2 0 0 0</pose>
			<inertial>
				<pose>0 0 -0.05 0 0 0</pose>
				<mass>1</mass>
				<inertia>
					<ixx>1</ixx>
					<ixy>0</ixy>
					<ixz>0</ixz>
					<iyy>0.33</iyy>
					<iyz>0</iyz>
					<izz>1</izz>
				</inertia>
			</inertial>
			<collision name="lower_link_collision">
				<pose>0 0 -0.05 0 0 0</pose>
				<geometry>
					<cylinder>
						<length>0.1</length>
						<radius>0.01</radius>
					</cylinder>
				</geometry>
			</collision>
			<visual name="lower_link_visual">
				<pose>0 0 -0.05 0 0 0</pose>
				<geometry>
					<cylinder>
						<length>0.1</length>
						<radius>0.01</radius>
					</cylinder>
				</geometry>
			</visual>
		</link>
		<joint name="elbow" type="revolute">
			<child>lower_link</child>
			<parent>upper_link</parent>
			<axis>
				<xyz expressed_in="__model__">0 1 0</xyz>
				<limit>
				</limit>
				<dynamics>
					<damping>0.1</damping>
					<friction>0</friction>
					<spring_reference>0</spring_reference>
					<spring_stiffness>0</spring_stiffness>
				</dynamics>
			</axis>
		</joint>

		<link name="foot_link">
			<pose relative_to="lower_link">0 0.0 -0.1 0 0 0</pose>
			<inertial>
				<pose>0 0 -0.05 0 0 0</pose>
				<mass>1</mass>
				<inertia>
					<ixx>1</ixx>
					<ixy>0</ixy>
					<ixz>0</ixz>
					<iyy>0.33</iyy>
					<iyz>0</iyz>
					<izz>1</izz>
				</inertia>
			</inertial>
			<collision name="foot_link_collision">
				<pose>0 0 -0.05 0 0 0</pose>
				<geometry>
					<cylinder>
						<length>0.1</length>
						<radius>0.005</radius>
					</cylinder>
				</geometry>
			</collision>
			<visual name="foot_link_visual">
				<pose>0 0 -0.05 0 0 0</pose>
				<geometry>
					<cylinder>
						<length>0.1</length>
						<radius>0.005</radius>
					</cylinder>
				</geometry>
			</visual>
		</link>
		<joint name="spring" type="prismatic">
			<child>foot_link</child>
			<parent>lower_link</parent>
			<axis>
				<xyz expressed_in="__model__">0 0 1</xyz>
				<limit>
					<lower>-0.1</lower>
					<upper>0.1</upper>
				</limit>
				<dynamics>
					<damping>0.1</damping>
					<friction>0</friction>
					<spring_reference>0</spring_reference>
					<spring_stiffness>500</spring_stiffness>
				</dynamics>
			</axis>
		</joint>
		<frame name="foot">
			<pose relative_to="foot_link">0 0 -0.1 0 0 0</pose>
		</frame>
	</model>
</sdf>